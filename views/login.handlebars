<div class="p-5 row text-center">
    
    <div class="col-lg-6 col-12 display-flex align-center">
        <h2 class="mr-3">Log in</h2>
        <form class="login-form">
            <div class="row display-flex justify-center">
                <div class="mx-3">
                    <label for="email-login">Email</label><br>
                    <input type="email" id="email-login">
                </div>
                <div>
                    <label for="password-login">Password</label><br>
                    <input type="password" id="password-login">
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn">Log in</button>
            </div>
        </form>
    </div>

    <div class="col-lg-6 col-12 display-flex align-center justify-center">
        <h2>Sign up</h2>
        <form class='signup-form'>
            <div>
                <label for="name-signup">First name</label><br>
                <input type="text" id="name-signup">
            </div>
            <div>
                <label for="email-signup">Email</label><br>
                <input type="email" id="email-signup" class="text-center">
            </div>
            <div>
                <label for="password-signup">Password</label><br>
                <input type="password" id="password-signup" class="text-center">
            </div>
            <div class="text-center mt-3">
                <button type="submit" class="btn">Sign up</button>
            </div>
        </form>
    </div>

</div>

<script src="./js/login.js"></script>